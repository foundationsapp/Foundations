<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<LinearLayout
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/_50"
        android:layout_width="@dimen/_100"
        android:layout_height="@dimen/_100"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="@dimen/_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foundations"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textSize="@dimen/_50"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bob_smith"
        android:textStyle="bold"
        android:textSize="@dimen/_20"
        android:textColor="@color/sloganColor"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jill_thomas"
        android:textStyle="bold"
        android:textSize="@dimen/_20"
        android:textColor="@color/sloganColor"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/janet_james"
        android:textStyle="bold"
        android:textSize="@dimen/_20"
        android:textColor="@color/sloganColor"
        android:layout_gravity="center"/>

    <Button
        android:layout_marginTop="@dimen/_300"
        android:layout_width="@dimen/_200"
        android:textSize="@dimen/_20"
        android:layout_height="@dimen/_40"
        android:layout_gravity="center"
        android:background="@drawable/get_started"
        android:text="@string/add_profile"
        android:textColor="@color/white" />


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>